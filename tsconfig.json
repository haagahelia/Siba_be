{
    "compilerOptions": {
        "target": "ESNEXT",
        "module": "ESNEXT",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
    },
    "include": [
        "db/**/*",
        "responseHandler/**/*",
        "routes/**/*",
        "services/**/*",
        "utils/**/*",
        "validationHandler/**/*",
        "index.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}